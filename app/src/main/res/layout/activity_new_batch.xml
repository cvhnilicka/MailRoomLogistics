<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cormick.mailroomlogistics.NewBatchActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/batch_quantity"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="108dp"
        android:layout_marginStart="72dp" />

    <EditText
        android:id="@+id/numPackages"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/default_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.55"
        android:layout_marginStart="36dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:text="@string/default_carriers"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="92dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.923"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:onClick="createBatch"
        android:text="@string/create_batch"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintHorizontal_bias="0.313" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_received"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="92dp" />

    <TextView
        android:id="@+id/date_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:text="@string/ongoing"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        android:layout_marginStart="130dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/date_delivered"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="92dp" />

    <TextView
        android:id="@+id/date_delivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:text="@string/ongoing"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        android:layout_marginStart="128dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginLeft="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="92dp" />

    <EditText
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="154dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintLeft_toRightOf="@+id/textView10"
        tools:text="Desination"
        android:layout_marginStart="154dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipient"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginLeft="92dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="92dp" />

    <EditText
        android:id="@+id/recipient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintLeft_toRightOf="@+id/textView12"
        android:layout_marginStart="175dp" />

    <Button
        android:id="@+id/getSignature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="410dp"
        android:layout_marginTop="28dp"
        android:text="@string/get_signature"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipient_name"
        android:layout_marginStart="410dp" />

    <ListView
        android:id="@+id/parcelList"
        android:layout_width="596dp"
        android:layout_height="230dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/getSignature"
        tools:layout_editor_absoluteX="2dp"></ListView>

    <Button
        android:id="@+id/complete_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:onClick="completeBatch"
        android:text="@string/batch_complete"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintLeft_toRightOf="@+id/button4" />

</android.support.constraint.ConstraintLayout>
